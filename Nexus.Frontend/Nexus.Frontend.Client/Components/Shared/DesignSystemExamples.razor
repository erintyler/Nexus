@page "/design-system"
@rendermode InteractiveAuto

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-violet-50 to-fuchsia-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-violet-600 via-purple-600 to-fuchsia-600 bg-clip-text text-transparent mb-3">
                Nexus Design System ✨
            </h1>
            <p class="text-xl text-gray-600">Modern. Sleek. Personality.</p>
        </div>

        <!-- Color Palette -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Gradient Color Palette</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Primary Gradient -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Primary (Purple → Fuchsia)</h3>
                        <div class="h-24 bg-gradient-to-r from-purple-600 to-fuchsia-600 rounded-xl shadow-lg flex items-center justify-center text-white font-semibold">
                            Primary Actions
                        </div>
                    </div>
                    
                    <!-- Success Gradient -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Success (Emerald → Teal)</h3>
                        <div class="h-24 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl shadow-lg flex items-center justify-center text-white font-semibold">
                            Success States
                        </div>
                    </div>
                    
                    <!-- Danger Gradient -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Danger (Red → Pink)</h3>
                        <div class="h-24 bg-gradient-to-r from-red-500 to-pink-600 rounded-xl shadow-lg flex items-center justify-center text-white font-semibold">
                            Destructive Actions
                        </div>
                    </div>
                    
                    <!-- Accent Gradient -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Accent (Indigo → Violet)</h3>
                        <div class="h-24 bg-gradient-to-r from-indigo-500 to-violet-600 rounded-xl shadow-lg flex items-center justify-center text-white font-semibold">
                            Special Features
                        </div>
                    </div>
                    
                    <!-- Warning Gradient -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Warning (Amber → Orange)</h3>
                        <div class="h-24 bg-gradient-to-r from-amber-500 to-orange-600 rounded-xl shadow-lg flex items-center justify-center text-white font-semibold">
                            Warnings
                        </div>
                    </div>
                    
                    <!-- Neutral -->
                    <div>
                        <h3 class="text-sm font-semibold mb-3 text-gray-700">Neutral (Gray)</h3>
                        <div class="h-24 bg-gray-200 rounded-xl shadow-md flex items-center justify-center text-gray-700 font-semibold border-2 border-gray-300">
                            Secondary Actions
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Typography -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Typography</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100 space-y-4">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-fuchsia-600 bg-clip-text text-transparent">
                    Gradient Heading - text-4xl font-bold
                </h1>
                <h2 class="text-2xl font-bold text-gray-800">Heading 2 - text-2xl font-bold</h2>
                <h3 class="text-xl font-semibold text-gray-800">Heading 3 - text-xl font-semibold</h3>
                <p class="text-base text-gray-700">Body text - text-base. This is the standard paragraph text with good readability.</p>
                <p class="text-sm text-gray-600">Small text - text-sm. Used for labels and secondary information.</p>
                <p class="text-xs text-gray-500">Helper text - text-xs. Used for captions and subtle hints.</p>
            </div>
        </section>

        <!-- Buttons -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Modern Buttons</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="space-y-8">
                    <!-- Primary Actions -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Primary Actions</h3>
                        <div class="flex flex-wrap gap-3">
                            <button class="px-6 py-3 bg-gradient-to-r from-purple-600 to-fuchsia-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-fuchsia-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transform hover:scale-105 active:scale-95 transition-all duration-200 shadow-lg hover:shadow-xl">
                                Primary Button
                            </button>
                            <button class="px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 text-white font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transform hover:scale-105 active:scale-95 transition-all duration-200 shadow-lg hover:shadow-xl">
                                Success Button
                            </button>
                            <button class="px-6 py-3 bg-gradient-to-r from-red-500 to-pink-600 text-white font-semibold rounded-xl hover:from-red-600 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transform hover:scale-105 active:scale-95 transition-all duration-200 shadow-lg hover:shadow-xl">
                                Danger Button
                            </button>
                        </div>
                    </div>

                    <!-- Secondary & Small -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Secondary & Accent</h3>
                        <div class="flex flex-wrap gap-3">
                            <button class="px-6 py-3 bg-gray-50 text-gray-700 font-semibold rounded-xl hover:bg-gray-100 border-2 border-gray-200 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transform hover:scale-105 active:scale-95 transition-all duration-200">
                                Secondary Button
                            </button>
                            <button class="px-4 py-2 bg-gradient-to-r from-violet-500 to-purple-600 text-white font-medium rounded-lg hover:from-violet-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-violet-500 transform hover:scale-105 active:scale-95 transition-all duration-200 shadow-md">
                                Accent Button
                            </button>
                        </div>
                    </div>

                    <!-- States -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button States</h3>
                        <div class="flex flex-wrap gap-3">
                            <button disabled class="px-6 py-3 bg-gray-300 text-gray-500 font-semibold rounded-xl cursor-not-allowed opacity-60">
                                Disabled Button
                            </button>
                            <button disabled class="px-6 py-3 bg-gradient-to-r from-purple-600 to-fuchsia-600 text-white font-semibold rounded-xl cursor-not-allowed opacity-60">
                                <span class="flex items-center justify-center">
                                    <NexusIcon Icon="fa-solid fa-spinner fa-spin" Size="fa-lg" />
                                    <span class="ml-2">Loading...</span>
                                </span>
                            </button>
                        </div>
                    </div>

                    <!-- Icon Buttons -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Icon Buttons</h3>
                        <div class="flex gap-3">
                            <button class="p-2 text-purple-600 hover:text-purple-800 focus:outline-none transform hover:scale-110 transition-all duration-200">
                                <NexusIcon Icon="fa-solid fa-pen-to-square" Size="fa-lg" />
                            </button>
                            <button class="p-2 text-red-600 hover:text-red-800 focus:outline-none transform hover:scale-110 transition-all duration-200">
                                <NexusIcon Icon="fa-solid fa-trash-can" Size="fa-lg" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Form Inputs -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Modern Form Inputs</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="max-w-2xl space-y-6">
                    <!-- Text Input -->
                    <div>
                        <label for="example-input" class="block text-sm font-semibold text-gray-700 mb-2">
                            Glass Morphism Input
                        </label>
                        <input 
                            type="text" 
                            id="example-input"
                            class="w-full px-4 py-3 bg-white/80 backdrop-blur-sm border border-gray-200 rounded-xl shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none transition-all duration-200 hover:shadow-md"
                            placeholder="Type something..." />
                        <p class="text-xs text-gray-500 mt-2">Helper text with smooth transitions</p>
                    </div>

                    <!-- Required Input -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Required Field <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text"
                            class="w-full px-4 py-3 bg-white/80 backdrop-blur-sm border border-gray-200 rounded-xl shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none transition-all duration-200 hover:shadow-md"
                            placeholder="This field is required" />
                    </div>

                    <!-- Input with Error -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Input with Error
                        </label>
                        <input 
                            type="text"
                            class="w-full px-4 py-3 bg-white/80 backdrop-blur-sm border-2 border-red-400 rounded-xl shadow-sm focus:ring-2 focus:ring-red-500 outline-none transition-all duration-200"
                            value="Invalid value" />
                        <p class="text-red-600 text-sm mt-2 font-medium">This field contains an error</p>
                    </div>

                    <!-- Textarea -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Textarea
                        </label>
                        <textarea 
                            rows="4"
                            class="w-full px-4 py-3 bg-white/80 backdrop-blur-sm border border-gray-200 rounded-xl shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none transition-all duration-200 hover:shadow-md resize-none"
                            placeholder="Enter description..."></textarea>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Modern Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Elevated Card -->
                <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-6 border border-gray-100 hover:shadow-2xl transition-shadow duration-300">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Elevated Card</h3>
                    <p class="text-gray-600 text-sm">Glass morphism with enhanced shadow on hover.</p>
                </div>

                <!-- Interactive Card -->
                <div class="group relative bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden cursor-pointer">
                    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-fuchsia-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative z-10">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="text-lg font-bold text-gray-800 group-hover:text-purple-600 transition-colors duration-300">Interactive Card</h3>
                            <span class="text-gray-400 group-hover:text-purple-500 transition-colors">
                                <NexusIcon Icon="fa-solid fa-chevron-right" />
                            </span>
                        </div>
                        <p class="text-gray-600 text-sm">Hover to see gradient overlay effect!</p>
                    </div>
                </div>

                <!-- Bordered Card -->
                <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border-2 border-gray-200">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Bordered Card</h3>
                    <p class="text-gray-600 text-sm">Clean border with smooth transitions.</p>
                </div>
            </div>
        </section>

        <!-- Tags/Badges -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Tags & Badges</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="space-y-6">
                    <!-- Vibrant Gradient Tags -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Vibrant Gradient Tags</h3>
                        <div class="flex flex-wrap gap-2">
                            <span class="inline-flex items-center bg-gradient-to-r from-purple-500 to-fuchsia-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md">
                                Primary Tag
                            </span>
                            <span class="inline-flex items-center bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md">
                                Success Tag
                            </span>
                            <span class="inline-flex items-center bg-gradient-to-r from-red-500 to-pink-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md">
                                Danger Tag
                            </span>
                            <span class="inline-flex items-center bg-gradient-to-r from-violet-500 to-purple-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md">
                                Accent Tag
                            </span>
                            <span class="inline-flex items-center bg-gradient-to-r from-amber-500 to-orange-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md">
                                Warning Tag
                            </span>
                        </div>
                    </div>

                    <!-- Soft Glow Tags -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Soft Glow Tags</h3>
                        <div class="flex flex-wrap gap-2">
                            <span class="inline-flex items-center bg-purple-100 text-purple-700 text-sm font-medium px-4 py-1.5 rounded-full border border-purple-200 shadow-sm">
                                Primary
                            </span>
                            <span class="inline-flex items-center bg-emerald-100 text-emerald-700 text-sm font-medium px-4 py-1.5 rounded-full border border-emerald-200 shadow-sm">
                                Success
                            </span>
                            <span class="inline-flex items-center bg-red-100 text-red-700 text-sm font-medium px-4 py-1.5 rounded-full border border-red-200 shadow-sm">
                                Danger
                            </span>
                        </div>
                    </div>

                    <!-- Tags with Remove Button -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Tags with Remove Button</h3>
                        <div class="flex flex-wrap gap-2">
                            <div class="inline-flex items-center bg-gradient-to-r from-purple-500 to-fuchsia-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md hover:shadow-lg transition-shadow duration-200">
                                <span class="font-semibold">Category:</span>
                                <span class="ml-1">Design</span>
                                <button type="button" class="ml-2 text-white/90 hover:text-white focus:outline-none transform hover:scale-110 transition-transform">
                                    <NexusIcon Icon="fa-solid fa-xmark" />
                                </button>
                            </div>
                            <div class="inline-flex items-center bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-sm font-medium px-4 py-1.5 rounded-full shadow-md hover:shadow-lg transition-shadow duration-200">
                                <span class="font-semibold">Artist:</span>
                                <span class="ml-1">John Doe</span>
                                <button type="button" class="ml-2 text-white/90 hover:text-white focus:outline-none transform hover:scale-110 transition-transform">
                                    <NexusIcon Icon="fa-solid fa-xmark" />
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Alerts -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Modern Alerts</h2>
            <div class="space-y-4">
                <!-- Success Alert -->
                <div class="p-4 rounded-xl bg-gradient-to-r from-emerald-50 to-teal-50 text-emerald-800 border-l-4 border-emerald-500 shadow-md backdrop-blur-sm">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0">
                            <NexusIcon Icon="fa-solid fa-circle-check" Size="fa-lg" />
                        </div>
                        <div class="flex-1">
                            <h4 class="font-semibold text-emerald-900 mb-1">Success!</h4>
                            <p class="text-sm">Your action was completed successfully.</p>
                        </div>
                    </div>
                </div>

                <!-- Error Alert -->
                <div class="p-4 rounded-xl bg-gradient-to-r from-red-50 to-pink-50 text-red-800 border-l-4 border-red-500 shadow-md backdrop-blur-sm">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0">
                            <NexusIcon Icon="fa-solid fa-circle-xmark" Size="fa-lg" />
                        </div>
                        <div class="flex-1">
                            <h4 class="font-semibold text-red-900 mb-1">Error</h4>
                            <p class="text-sm">Something went wrong. Please try again.</p>
                        </div>
                    </div>
                </div>

                <!-- Warning Alert -->
                <div class="p-4 rounded-xl bg-gradient-to-r from-amber-50 to-yellow-50 text-amber-800 border-l-4 border-amber-500 shadow-md backdrop-blur-sm">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0">
                            <NexusIcon Icon="fa-solid fa-triangle-exclamation" Size="fa-lg" />
                        </div>
                        <div class="flex-1">
                            <h4 class="font-semibold text-amber-900 mb-1">Warning</h4>
                            <p class="text-sm">Please review this information carefully.</p>
                        </div>
                    </div>
                </div>

                <!-- Info Alert -->
                <div class="p-4 rounded-xl bg-gradient-to-r from-purple-50 to-violet-50 text-purple-800 border-l-4 border-purple-500 shadow-md backdrop-blur-sm">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0">
                            <NexusIcon Icon="fa-solid fa-circle-info" Size="fa-lg" />
                        </div>
                        <div class="flex-1">
                            <h4 class="font-semibold text-purple-900 mb-1">Info</h4>
                            <p class="text-sm">Here's some helpful information for you.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Loading States -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Loading States</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="space-y-8">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Spinners</h3>
                        <div class="flex gap-6 items-center">
                            <NexusSpinner Size="SpinnerSize.Medium" Color="SpinnerColor.Primary" />
                            <NexusSpinner Size="SpinnerSize.Large" Color="SpinnerColor.Accent" />
                        </div>
                    </div>

                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Skeleton Loader</h3>
                        <div class="animate-pulse space-y-3">
                            <div class="h-4 bg-gradient-to-r from-gray-200 to-gray-300 rounded-lg w-3/4"></div>
                            <div class="h-4 bg-gradient-to-r from-gray-200 to-gray-300 rounded-lg w-1/2"></div>
                            <div class="h-4 bg-gradient-to-r from-gray-200 to-gray-300 rounded-lg w-5/6"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- File Upload -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Modern File Upload</h2>
            <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-8 border border-gray-100">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Empty State -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Empty State</h3>
                        <label class="group relative flex flex-col items-center justify-center w-full h-48 border-2 border-dashed border-gray-300 rounded-2xl cursor-pointer bg-gradient-to-br from-gray-50 to-white hover:from-purple-50 hover:to-violet-50 hover:border-purple-400 transition-all duration-300">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <div class="mb-3 p-3 bg-gradient-to-br from-purple-500 to-fuchsia-500 rounded-full group-hover:scale-110 transition-transform duration-300">
                                    <NexusIcon Icon="fa-solid fa-cloud-arrow-up" Size="fa-lg" />
                                </div>
                                <p class="mb-1 text-sm text-gray-600 font-semibold">
                                    <span class="text-purple-600">Click to upload</span>
                                </p>
                                <p class="text-xs text-gray-500">PNG, JPG, GIF</p>
                            </div>
                        </label>
                    </div>

                    <!-- With File State -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">With File</h3>
                        <label class="group relative flex flex-col items-center justify-center w-full h-48 border-2 border-dashed border-emerald-300 rounded-2xl cursor-pointer bg-gradient-to-br from-emerald-50 to-teal-50 hover:from-emerald-100 hover:to-teal-100 transition-all duration-300">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <div class="mb-3 p-3 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-full">
                                    <NexusIcon Icon="fa-solid fa-check" Size="fa-lg" />
                                </div>
                                <p class="mb-1 text-sm text-gray-700 font-bold">image.jpg</p>
                                <p class="text-xs text-gray-600">2.4 MB</p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="mt-12 p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-100">
            <div class="text-center">
                <p class="text-gray-600 mb-2">
                    For complete documentation, see the design system markdown files.
                </p>
                <div class="flex flex-wrap justify-center gap-2">
                    <code class="bg-gradient-to-r from-purple-100 to-fuchsia-100 text-purple-800 px-3 py-1 rounded-lg text-sm font-semibold">DESIGN_SYSTEM.md</code>
                    <code class="bg-gradient-to-r from-purple-100 to-fuchsia-100 text-purple-800 px-3 py-1 rounded-lg text-sm font-semibold">DESIGN_SYSTEM_QUICK_REFERENCE.md</code>
                    <code class="bg-gradient-to-r from-purple-100 to-fuchsia-100 text-purple-800 px-3 py-1 rounded-lg text-sm font-semibold">MODERN_COMPONENT_SHOWCASE.md</code>
                </div>
            </div>
        </footer>
    </div>
</div>


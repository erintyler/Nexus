@page "/components"
@rendermode InteractiveAuto
@using Nexus.Frontend.Client.Components.DesignSystem

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-violet-50 to-fuchsia-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-violet-600 via-purple-600 to-fuchsia-600 bg-clip-text text-transparent mb-3">
                Component Showcase âœ¨
            </h1>
            <p class="text-xl text-gray-600">Interactive examples of all Nexus design system components</p>
        </div>

        <!-- Buttons Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Buttons</h2>
            <NexusCard Variant="CardVariant.Elevated">
                <div class="space-y-6">
                    <!-- Button Variants -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button Variants</h3>
                        <div class="flex flex-wrap gap-3">
                            <NexusButton Variant="ButtonVariant.Primary">Primary</NexusButton>
                            <NexusButton Variant="ButtonVariant.Secondary">Secondary</NexusButton>
                            <NexusButton Variant="ButtonVariant.Success">Success</NexusButton>
                            <NexusButton Variant="ButtonVariant.Danger">Danger</NexusButton>
                            <NexusButton Variant="ButtonVariant.Accent">Accent</NexusButton>
                            <NexusButton Variant="ButtonVariant.Warning">Warning</NexusButton>
                        </div>
                    </div>

                    <!-- Button Sizes -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button Sizes</h3>
                        <div class="flex flex-wrap gap-3 items-center">
                            <NexusButton Size="ButtonSize.Small">Small</NexusButton>
                            <NexusButton Size="ButtonSize.Medium">Medium</NexusButton>
                            <NexusButton Size="ButtonSize.Large">Large</NexusButton>
                        </div>
                    </div>

                    <!-- Button States -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button States</h3>
                        <div class="flex flex-wrap gap-3">
                            <NexusButton Disabled="true">Disabled</NexusButton>
                            <NexusButton IsLoading="true" LoadingText="Processing...">Loading</NexusButton>
                        </div>
                    </div>

                    <!-- Icon Buttons -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Icon Buttons</h3>
                        <div class="flex gap-3">
                            <NexusIconButton Color="IconButtonColor.Primary" AriaLabel="Edit">
                                <NexusIcon Icon="fa-solid fa-pen-to-square" />
                            </NexusIconButton>
                            <NexusIconButton Color="IconButtonColor.Danger" AriaLabel="Delete">
                                <NexusIcon Icon="fa-solid fa-trash-can" />
                            </NexusIconButton>
                            <NexusIconButton Color="IconButtonColor.Success" AriaLabel="Check">
                                <NexusIcon Icon="fa-solid fa-check" />
                            </NexusIconButton>
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Navigation Menu Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Navigation Menus</h2>
            <div class="space-y-6">
                <!-- Menu Styles -->
                <div>
                    <h3 class="text-sm font-semibold text-gray-700 mb-4">Menu Styles</h3>
                    
                    <!-- Elevated Menu -->
                    <NexusCard Variant="CardVariant.Elevated">
                        <p class="text-xs font-semibold text-gray-600 mb-3">Elevated Style</p>
                        <NexusMenu Style="MenuStyle.Elevated" IsSticky="false">
                            <BrandContent>
                                <span class="text-xl font-bold bg-gradient-to-r from-purple-600 to-fuchsia-600 bg-clip-text text-transparent">Nexus</span>
                            </BrandContent>
                            <MenuItems>
                                <NexusMenuItem Href="#home" IsActive="true">Home</NexusMenuItem>
                                <NexusMenuItem Href="#features">Features</NexusMenuItem>
                                <NexusMenuItem Href="#about">About</NexusMenuItem>
                                <NexusMenuItem Href="#contact">Contact</NexusMenuItem>
                            </MenuItems>
                        </NexusMenu>
                    </NexusCard>

                    <!-- Glass Menu -->
                    <div class="mb-4">
                        <NexusCard Variant="CardVariant.Elevated">
                            <p class="text-xs font-semibold text-gray-600 mb-3">Glass Style</p>
                            <NexusMenu Style="MenuStyle.Glass" IsSticky="false">
                                <BrandContent>
                                    <span class="text-xl font-bold bg-gradient-to-r from-purple-600 to-fuchsia-600 bg-clip-text text-transparent">Nexus</span>
                                </BrandContent>
                                <MenuItems>
                                    <NexusMenuItem Href="#home">Home</NexusMenuItem>
                                    <NexusMenuItem Href="#features" IsActive="true">Features</NexusMenuItem>
                                    <NexusMenuItem Href="#about">About</NexusMenuItem>
                                </MenuItems>
                            </NexusMenu>
                        </NexusCard>
                    </div>

                    <!-- Gradient Menu -->
                    <div class="mb-4">
                        <NexusCard Variant="CardVariant.Elevated">
                            <p class="text-xs font-semibold text-gray-600 mb-3">Gradient Style</p>
                            <NexusMenu Style="MenuStyle.Gradient" IsSticky="false">
                                <BrandContent>
                                    <span class="text-xl font-bold text-white">Nexus</span>
                                </BrandContent>
                                <MenuItems>
                                    <NexusMenuItem Href="#home" class="text-white hover:bg-white/10">Home</NexusMenuItem>
                                    <NexusMenuItem Href="#features" class="text-white hover:bg-white/10">Features</NexusMenuItem>
                                    <NexusMenuItem Href="#about" class="text-white hover:bg-white/10">About</NexusMenuItem>
                                </MenuItems>
                            </NexusMenu>
                        </NexusCard>
                    </div>
                </div>

                <!-- Dropdown Menus -->
                <div>
                    <h3 class="text-sm font-semibold text-gray-700 mb-4">Dropdown Menus</h3>
                    <NexusCard Variant="CardVariant.Elevated">
                        <div class="flex flex-wrap gap-4">
                            <NexusDropdown Style="DropdownStyle.Elevated">
                                <TriggerContent>Account</TriggerContent>
                                <DropdownContent>
                                    <NexusDropdownItem Href="#profile">
                                        <Icon>
                                            <NexusIcon Icon="fa-solid fa-user" />
                                        </Icon>
                                        <ChildContent>Profile</ChildContent>
                                    </NexusDropdownItem>
                                    <NexusDropdownItem Href="#settings" Description="Manage account preferences">
                                        <Icon>
                                            <NexusIcon Icon="fa-solid fa-gear" />
                                        </Icon>
                                        <ChildContent>Settings</ChildContent>
                                    </NexusDropdownItem>
                                    <NexusDropdownItem Href="#logout" IsDanger="true">
                                        <Icon>
                                            <NexusIcon Icon="fa-solid fa-right-from-bracket" />
                                        </Icon>
                                        <ChildContent>Logout</ChildContent>
                                    </NexusDropdownItem>
                                </DropdownContent>
                            </NexusDropdown>

                            <NexusDropdown Style="DropdownStyle.Glass">
                                <TriggerContent>Options</TriggerContent>
                                <DropdownContent>
                                    <NexusDropdownItem Href="#edit">Edit</NexusDropdownItem>
                                    <NexusDropdownItem Href="#duplicate">Duplicate</NexusDropdownItem>
                                    <NexusDropdownItem Href="#archive">Archive</NexusDropdownItem>
                                    <NexusDropdownItem Href="#delete" IsDanger="true">Delete</NexusDropdownItem>
                                </DropdownContent>
                            </NexusDropdown>

                            <NexusDropdown Style="DropdownStyle.Gradient">
                                <TriggerContent>More</TriggerContent>
                                <DropdownContent>
                                    <NexusDropdownItem Href="#export">Export Data</NexusDropdownItem>
                                    <NexusDropdownItem Href="#import">Import Data</NexusDropdownItem>
                                    <NexusDropdownItem Href="#help" Description="Get help and support">Help Center</NexusDropdownItem>
                                </DropdownContent>
                            </NexusDropdown>
                        </div>
                    </NexusCard>
                </div>
            </div>
        </section>

        <!-- Form Inputs Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Form Inputs</h2>
            <NexusCard Variant="CardVariant.Elevated">
                <div class="max-w-2xl space-y-6">
                    <NexusTextInput 
                        Label="Email Address" 
                        Placeholder="Enter your email"
                        Type="email"
                        HelperText="We'll never share your email with anyone else." />
                    
                    <NexusTextInput 
                        Label="Username" 
                        IsRequired="true"
                        Placeholder="Choose a username" />
                    
                    <NexusTextInput 
                        Label="Invalid Field"
                        Value="invalid"
                        ErrorMessage="Please enter a valid email address" />
                    
                    <NexusTextArea 
                        Label="Description"
                        Placeholder="Tell us about yourself..."
                        Rows="6"
                        MaxLength="500"
                        HelperText="Maximum 500 characters" />
                </div>
            </NexusCard>
        </section>

        <!-- Cards Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <NexusCard Variant="CardVariant.Elevated">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Elevated Card</h3>
                    <p class="text-gray-600 text-sm">Glass morphism with enhanced shadow on hover.</p>
                </NexusCard>

                <NexusCard Variant="CardVariant.Interactive" ShowArrow="true">
                    <h3 class="text-lg font-bold text-gray-800 group-hover:text-purple-600 transition-colors duration-300 mb-2">Interactive Card</h3>
                    <p class="text-gray-600 text-sm">Hover to see gradient overlay effect!</p>
                </NexusCard>

                <NexusCard Variant="CardVariant.Bordered">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Bordered Card</h3>
                    <p class="text-gray-600 text-sm">Clean border with smooth transitions.</p>
                </NexusCard>
            </div>
        </section>

        <!-- Alerts Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Alerts</h2>
            <div class="space-y-4">
                <NexusAlert Type="AlertType.Success" Title="Success!">
                    Your action was completed successfully.
                </NexusAlert>

                <NexusAlert Type="AlertType.Error" Title="Error">
                    Something went wrong. Please try again.
                </NexusAlert>

                <NexusAlert Type="AlertType.Warning" Title="Warning">
                    Please review this information carefully.
                </NexusAlert>

                <NexusAlert Type="AlertType.Info" Title="Info" Dismissible="true">
                    Here's some helpful information for you. Click the X to dismiss.
                </NexusAlert>
            </div>
        </section>

        <!-- Badges Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Badges & Tags</h2>
            <NexusCard Variant="CardVariant.Elevated">
                <div class="space-y-6">
                    <!-- Gradient Badges -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Gradient Badges</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Color="BadgeColor.Primary" Style="BadgeStyle.Gradient">Primary</NexusBadge>
                            <NexusBadge Color="BadgeColor.Success" Style="BadgeStyle.Gradient">Success</NexusBadge>
                            <NexusBadge Color="BadgeColor.Danger" Style="BadgeStyle.Gradient">Danger</NexusBadge>
                            <NexusBadge Color="BadgeColor.Accent" Style="BadgeStyle.Gradient">Accent</NexusBadge>
                            <NexusBadge Color="BadgeColor.Warning" Style="BadgeStyle.Gradient">Warning</NexusBadge>
                            <NexusBadge Color="BadgeColor.Info" Style="BadgeStyle.Gradient">Info</NexusBadge>
                        </div>
                    </div>

                    <!-- Soft Badges -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Soft Badges</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Color="BadgeColor.Primary" Style="BadgeStyle.Soft">Primary</NexusBadge>
                            <NexusBadge Color="BadgeColor.Success" Style="BadgeStyle.Soft">Success</NexusBadge>
                            <NexusBadge Color="BadgeColor.Danger" Style="BadgeStyle.Soft">Danger</NexusBadge>
                        </div>
                    </div>

                    <!-- Badges with Labels -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Badges with Labels</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Label="Category" Color="BadgeColor.Primary" Removable="true">Design</NexusBadge>
                            <NexusBadge Label="Artist" Color="BadgeColor.Success" Removable="true">John Doe</NexusBadge>
                        </div>
                    </div>

                    <!-- Badges with Prefix Icons -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Badges with Prefix Icons</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Color="BadgeColor.Primary" Style="BadgeStyle.Gradient">
                                <PrefixIcon><NexusIcon Icon="fa-solid fa-star" /></PrefixIcon>
                                <ChildContent>Featured</ChildContent>
                            </NexusBadge>
                            <NexusBadge Color="BadgeColor.Success" Style="BadgeStyle.Gradient">
                                <PrefixIcon><NexusIcon Icon="fa-solid fa-check" /></PrefixIcon>
                                <ChildContent>Verified</ChildContent>
                            </NexusBadge>
                            <NexusBadge Color="BadgeColor.Warning" Style="BadgeStyle.Soft">
                                <PrefixIcon><NexusIcon Icon="fa-solid fa-fire" /></PrefixIcon>
                                <ChildContent>Trending</ChildContent>
                            </NexusBadge>
                            <NexusBadge Color="BadgeColor.Info" Style="BadgeStyle.Soft" Removable="true">
                                <PrefixIcon><NexusIcon Icon="fa-solid fa-tag" /></PrefixIcon>
                                <ChildContent>Tag</ChildContent>
                            </NexusBadge>
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Loading States Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Loading States</h2>
            <NexusCard Variant="CardVariant.Elevated">
                <div class="space-y-8">
                    <!-- Spinners -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Spinners</h3>
                        <div class="flex gap-6 items-center">
                            <NexusSpinner Size="SpinnerSize.Small" Color="SpinnerColor.Primary" />
                            <NexusSpinner Size="SpinnerSize.Medium" Color="SpinnerColor.Success" />
                            <NexusSpinner Size="SpinnerSize.Large" Color="SpinnerColor.Danger" />
                            <NexusSpinner Size="SpinnerSize.ExtraLarge" Color="SpinnerColor.Info" />
                        </div>
                    </div>

                    <!-- Skeleton Loaders -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Skeleton Loaders</h3>
                        <div class="space-y-3">
                            <NexusSkeleton Width="w-3/4" Height="h-4" />
                            <NexusSkeleton Width="w-1/2" Height="h-4" />
                            <NexusSkeleton Width="w-5/6" Height="h-4" />
                        </div>
                    </div>

                    <!-- Skeleton Circle -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Circle Skeleton</h3>
                        <div class="flex gap-4">
                            <NexusSkeleton Shape="SkeletonShape.Circle" Width="w-12" Height="h-12" />
                            <NexusSkeleton Shape="SkeletonShape.Circle" Width="w-16" Height="h-16" />
                            <NexusSkeleton Shape="SkeletonShape.Circle" Width="w-20" Height="h-20" />
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Footer -->
        <footer class="mt-12 p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-100">
            <div class="text-center">
                <p class="text-gray-600 mb-2">
                    All components are built with Blazor and follow the Nexus design system principles.
                </p>
                <div class="flex flex-wrap justify-center gap-2">
                    <NexusBadge Color="BadgeColor.Primary" Style="BadgeStyle.Soft">Modern</NexusBadge>
                    <NexusBadge Color="BadgeColor.Success" Style="BadgeStyle.Soft">Tested</NexusBadge>
                    <NexusBadge Color="BadgeColor.Accent" Style="BadgeStyle.Soft">Reusable</NexusBadge>
                </div>
            </div>
        </footer>
    </div>
</div>

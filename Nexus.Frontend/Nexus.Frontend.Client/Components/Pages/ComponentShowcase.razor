@page "/components"
@rendermode InteractiveAuto
@using Nexus.Frontend.Client.Components.DesignSystem

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-violet-50 to-fuchsia-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-violet-600 via-purple-600 to-fuchsia-600 bg-clip-text text-transparent mb-3">
                Component Showcase âœ¨
            </h1>
            <p class="text-xl text-gray-600">Interactive examples of all Nexus design system components</p>
        </div>

        <!-- Buttons Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Buttons</h2>
            <NexusCard Variant="NexusCard.CardVariant.Elevated">
                <div class="space-y-6">
                    <!-- Button Variants -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button Variants</h3>
                        <div class="flex flex-wrap gap-3">
                            <NexusButton Variant="NexusButton.ButtonVariant.Primary">Primary</NexusButton>
                            <NexusButton Variant="NexusButton.ButtonVariant.Secondary">Secondary</NexusButton>
                            <NexusButton Variant="NexusButton.ButtonVariant.Success">Success</NexusButton>
                            <NexusButton Variant="NexusButton.ButtonVariant.Danger">Danger</NexusButton>
                            <NexusButton Variant="NexusButton.ButtonVariant.Accent">Accent</NexusButton>
                            <NexusButton Variant="NexusButton.ButtonVariant.Warning">Warning</NexusButton>
                        </div>
                    </div>

                    <!-- Button Sizes -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button Sizes</h3>
                        <div class="flex flex-wrap gap-3 items-center">
                            <NexusButton Size="NexusButton.ButtonSize.Small">Small</NexusButton>
                            <NexusButton Size="NexusButton.ButtonSize.Medium">Medium</NexusButton>
                            <NexusButton Size="NexusButton.ButtonSize.Large">Large</NexusButton>
                        </div>
                    </div>

                    <!-- Button States -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Button States</h3>
                        <div class="flex flex-wrap gap-3">
                            <NexusButton Disabled="true">Disabled</NexusButton>
                            <NexusButton IsLoading="true" LoadingText="Processing...">Loading</NexusButton>
                        </div>
                    </div>

                    <!-- Icon Buttons -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Icon Buttons</h3>
                        <div class="flex gap-3">
                            <NexusIconButton Color="NexusIconButton.IconButtonColor.Primary" AriaLabel="Edit">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path>
                                    <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path>
                                </svg>
                            </NexusIconButton>
                            <NexusIconButton Color="NexusIconButton.IconButtonColor.Danger" AriaLabel="Delete">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                            </NexusIconButton>
                            <NexusIconButton Color="NexusIconButton.IconButtonColor.Success" AriaLabel="Check">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </NexusIconButton>
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Form Inputs Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Form Inputs</h2>
            <NexusCard Variant="NexusCard.CardVariant.Elevated">
                <div class="max-w-2xl space-y-6">
                    <NexusTextInput 
                        Label="Email Address" 
                        Placeholder="Enter your email"
                        Type="email"
                        HelperText="We'll never share your email with anyone else." />
                    
                    <NexusTextInput 
                        Label="Username" 
                        IsRequired="true"
                        Placeholder="Choose a username" />
                    
                    <NexusTextInput 
                        Label="Invalid Field"
                        Value="invalid"
                        ErrorMessage="Please enter a valid email address" />
                    
                    <NexusTextArea 
                        Label="Description"
                        Placeholder="Tell us about yourself..."
                        Rows="6"
                        MaxLength="500"
                        HelperText="Maximum 500 characters" />
                </div>
            </NexusCard>
        </section>

        <!-- Cards Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <NexusCard Variant="NexusCard.CardVariant.Elevated">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Elevated Card</h3>
                    <p class="text-gray-600 text-sm">Glass morphism with enhanced shadow on hover.</p>
                </NexusCard>

                <NexusCard Variant="NexusCard.CardVariant.Interactive" ShowArrow="true">
                    <h3 class="text-lg font-bold text-gray-800 group-hover:text-purple-600 transition-colors duration-300 mb-2">Interactive Card</h3>
                    <p class="text-gray-600 text-sm">Hover to see gradient overlay effect!</p>
                </NexusCard>

                <NexusCard Variant="NexusCard.CardVariant.Bordered">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">Bordered Card</h3>
                    <p class="text-gray-600 text-sm">Clean border with smooth transitions.</p>
                </NexusCard>
            </div>
        </section>

        <!-- Alerts Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Alerts</h2>
            <div class="space-y-4">
                <NexusAlert Type="NexusAlert.AlertType.Success" Title="Success!">
                    Your action was completed successfully.
                </NexusAlert>

                <NexusAlert Type="NexusAlert.AlertType.Error" Title="Error">
                    Something went wrong. Please try again.
                </NexusAlert>

                <NexusAlert Type="NexusAlert.AlertType.Warning" Title="Warning">
                    Please review this information carefully.
                </NexusAlert>

                <NexusAlert Type="NexusAlert.AlertType.Info" Title="Info" Dismissible="true">
                    Here's some helpful information for you. Click the X to dismiss.
                </NexusAlert>
            </div>
        </section>

        <!-- Badges Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Badges & Tags</h2>
            <NexusCard Variant="NexusCard.CardVariant.Elevated">
                <div class="space-y-6">
                    <!-- Gradient Badges -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Gradient Badges</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Color="NexusBadge.BadgeColor.Primary" Style="NexusBadge.BadgeStyle.Gradient">Primary</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Success" Style="NexusBadge.BadgeStyle.Gradient">Success</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Danger" Style="NexusBadge.BadgeStyle.Gradient">Danger</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Accent" Style="NexusBadge.BadgeStyle.Gradient">Accent</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Warning" Style="NexusBadge.BadgeStyle.Gradient">Warning</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Info" Style="NexusBadge.BadgeStyle.Gradient">Info</NexusBadge>
                        </div>
                    </div>

                    <!-- Soft Badges -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Soft Badges</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Color="NexusBadge.BadgeColor.Primary" Style="NexusBadge.BadgeStyle.Soft">Primary</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Success" Style="NexusBadge.BadgeStyle.Soft">Success</NexusBadge>
                            <NexusBadge Color="NexusBadge.BadgeColor.Danger" Style="NexusBadge.BadgeStyle.Soft">Danger</NexusBadge>
                        </div>
                    </div>

                    <!-- Badges with Labels -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Badges with Labels</h3>
                        <div class="flex flex-wrap gap-2">
                            <NexusBadge Label="Category" Color="NexusBadge.BadgeColor.Primary" Removable="true">Design</NexusBadge>
                            <NexusBadge Label="Artist" Color="NexusBadge.BadgeColor.Success" Removable="true">John Doe</NexusBadge>
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Loading States Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Loading States</h2>
            <NexusCard Variant="NexusCard.CardVariant.Elevated">
                <div class="space-y-8">
                    <!-- Spinners -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Spinners</h3>
                        <div class="flex gap-6 items-center">
                            <NexusSpinner Size="NexusSpinner.SpinnerSize.Small" Color="NexusSpinner.SpinnerColor.Primary" />
                            <NexusSpinner Size="NexusSpinner.SpinnerSize.Medium" Color="NexusSpinner.SpinnerColor.Success" />
                            <NexusSpinner Size="NexusSpinner.SpinnerSize.Large" Color="NexusSpinner.SpinnerColor.Danger" />
                            <NexusSpinner Size="NexusSpinner.SpinnerSize.ExtraLarge" Color="NexusSpinner.SpinnerColor.Info" />
                        </div>
                    </div>

                    <!-- Skeleton Loaders -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Skeleton Loaders</h3>
                        <div class="space-y-3">
                            <NexusSkeleton Width="w-3/4" Height="h-4" />
                            <NexusSkeleton Width="w-1/2" Height="h-4" />
                            <NexusSkeleton Width="w-5/6" Height="h-4" />
                        </div>
                    </div>

                    <!-- Skeleton Circle -->
                    <div>
                        <h3 class="text-sm font-semibold text-gray-700 mb-4">Circle Skeleton</h3>
                        <div class="flex gap-4">
                            <NexusSkeleton Shape="NexusSkeleton.SkeletonShape.Circle" Width="w-12" Height="h-12" />
                            <NexusSkeleton Shape="NexusSkeleton.SkeletonShape.Circle" Width="w-16" Height="h-16" />
                            <NexusSkeleton Shape="NexusSkeleton.SkeletonShape.Circle" Width="w-20" Height="h-20" />
                        </div>
                    </div>
                </div>
            </NexusCard>
        </section>

        <!-- Footer -->
        <footer class="mt-12 p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-100">
            <div class="text-center">
                <p class="text-gray-600 mb-2">
                    All components are built with Blazor and follow the Nexus design system principles.
                </p>
                <div class="flex flex-wrap justify-center gap-2">
                    <NexusBadge Color="NexusBadge.BadgeColor.Primary" Style="NexusBadge.BadgeStyle.Soft">Modern</NexusBadge>
                    <NexusBadge Color="NexusBadge.BadgeColor.Success" Style="NexusBadge.BadgeStyle.Soft">Tested</NexusBadge>
                    <NexusBadge Color="NexusBadge.BadgeColor.Accent" Style="NexusBadge.BadgeStyle.Soft">Reusable</NexusBadge>
                </div>
            </div>
        </footer>
    </div>
</div>

@* Modern alert component following Nexus design system *@

<div class="@GetAlertClasses()" role="alert" @attributes="AdditionalAttributes">
    <div class="flex items-start gap-3">
        @if (ShowIcon)
        {
            <div class="flex-shrink-0">
                @GetIcon()
            </div>
        }
        <div class="flex-1">
            @if (!string.IsNullOrWhiteSpace(Title))
            {
                <h4 class="@GetTitleClasses()">@Title</h4>
            }
            <div class="text-sm">
                @ChildContent
            </div>
        </div>
        @if (Dismissible)
        {
            <button type="button" class="flex-shrink-0 text-current opacity-70 hover:opacity-100 transition-opacity" @onclick="HandleDismiss">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        }
    </div>
</div>

@code {
    /// <summary>
    /// Alert content
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Alert type
    /// </summary>
    [Parameter]
    public AlertType Type { get; set; } = AlertType.Info;

    /// <summary>
    /// Alert title
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// Whether to show the icon
    /// </summary>
    [Parameter]
    public bool ShowIcon { get; set; } = true;

    /// <summary>
    /// Whether the alert can be dismissed
    /// </summary>
    [Parameter]
    public bool Dismissible { get; set; }

    /// <summary>
    /// Callback when alert is dismissed
    /// </summary>
    [Parameter]
    public EventCallback OnDismiss { get; set; }

    /// <summary>
    /// Additional HTML attributes
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetAlertClasses()
    {
        var baseClasses = "p-4 rounded-xl border-l-4 shadow-md backdrop-blur-sm";
        
        var typeClasses = Type switch
        {
            AlertType.Success => "bg-gradient-to-r from-emerald-50 to-teal-50 text-emerald-800 border-emerald-500",
            AlertType.Error => "bg-gradient-to-r from-red-50 to-pink-50 text-red-800 border-red-500",
            AlertType.Warning => "bg-gradient-to-r from-amber-50 to-yellow-50 text-amber-800 border-amber-500",
            AlertType.Info => "bg-gradient-to-r from-purple-50 to-violet-50 text-purple-800 border-purple-500",
            _ => "bg-gradient-to-r from-purple-50 to-violet-50 text-purple-800 border-purple-500"
        };

        return $"{baseClasses} {typeClasses}".Trim();
    }

    private string GetTitleClasses()
    {
        return Type switch
        {
            AlertType.Success => "font-semibold text-emerald-900 mb-1",
            AlertType.Error => "font-semibold text-red-900 mb-1",
            AlertType.Warning => "font-semibold text-amber-900 mb-1",
            AlertType.Info => "font-semibold text-purple-900 mb-1",
            _ => "font-semibold text-purple-900 mb-1"
        };
    }

    private RenderFragment GetIcon() => Type switch
    {
        AlertType.Success => builder =>
        {
            builder.OpenElement(0, "svg");
            builder.AddAttribute(1, "class", "w-6 h-6 text-emerald-600");
            builder.AddAttribute(2, "fill", "currentColor");
            builder.AddAttribute(3, "viewBox", "0 0 20 20");
            builder.OpenElement(4, "path");
            builder.AddAttribute(5, "fill-rule", "evenodd");
            builder.AddAttribute(6, "d", "M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z");
            builder.AddAttribute(7, "clip-rule", "evenodd");
            builder.CloseElement();
            builder.CloseElement();
        },
        AlertType.Error => builder =>
        {
            builder.OpenElement(0, "svg");
            builder.AddAttribute(1, "class", "w-6 h-6 text-red-600");
            builder.AddAttribute(2, "fill", "currentColor");
            builder.AddAttribute(3, "viewBox", "0 0 20 20");
            builder.OpenElement(4, "path");
            builder.AddAttribute(5, "fill-rule", "evenodd");
            builder.AddAttribute(6, "d", "M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z");
            builder.AddAttribute(7, "clip-rule", "evenodd");
            builder.CloseElement();
            builder.CloseElement();
        },
        AlertType.Warning => builder =>
        {
            builder.OpenElement(0, "svg");
            builder.AddAttribute(1, "class", "w-6 h-6 text-amber-600");
            builder.AddAttribute(2, "fill", "currentColor");
            builder.AddAttribute(3, "viewBox", "0 0 20 20");
            builder.OpenElement(4, "path");
            builder.AddAttribute(5, "fill-rule", "evenodd");
            builder.AddAttribute(6, "d", "M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z");
            builder.AddAttribute(7, "clip-rule", "evenodd");
            builder.CloseElement();
            builder.CloseElement();
        },
        AlertType.Info => builder =>
        {
            builder.OpenElement(0, "svg");
            builder.AddAttribute(1, "class", "w-6 h-6 text-purple-600");
            builder.AddAttribute(2, "fill", "currentColor");
            builder.AddAttribute(3, "viewBox", "0 0 20 20");
            builder.OpenElement(4, "path");
            builder.AddAttribute(5, "fill-rule", "evenodd");
            builder.AddAttribute(6, "d", "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z");
            builder.AddAttribute(7, "clip-rule", "evenodd");
            builder.CloseElement();
            builder.CloseElement();
        },
        _ => builder => { }
    };

    private async Task HandleDismiss()
    {
        await OnDismiss.InvokeAsync();
    }

    public enum AlertType
    {
        Success,
        Error,
        Warning,
        Info
    }
}

@* Spinner loading component following Nexus design system *@

<span class="@GetColorClasses()" @attributes="AdditionalAttributes">
    <NexusIcon Icon="fa-solid fa-spinner fa-spin" Size="@GetSizeString()" />
</span>

@code {
    /// <summary>
    /// Spinner size
    /// </summary>
    [Parameter]
    public SpinnerSize Size { get; set; } = SpinnerSize.Medium;

    /// <summary>
    /// Spinner color
    /// </summary>
    [Parameter]
    public SpinnerColor Color { get; set; } = SpinnerColor.Primary;

    /// <summary>
    /// Additional HTML attributes
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetSizeString()
    {
        return Size switch
        {
            SpinnerSize.Small => "fa-sm",
            SpinnerSize.Medium => "fa-2x",
            SpinnerSize.Large => "fa-3x",
            SpinnerSize.ExtraLarge => "fa-4x",
            _ => "fa-2x"
        };
    }

    private string GetColorClasses()
    {
        return Color switch
        {
            SpinnerColor.Primary => "text-purple-600",
            SpinnerColor.Success => "text-emerald-600",
            SpinnerColor.Danger => "text-red-600",
            SpinnerColor.Warning => "text-amber-600",
            SpinnerColor.Info => "text-blue-600",
            SpinnerColor.Accent => "text-indigo-600",
            SpinnerColor.White => "text-white",
            _ => "text-purple-600"
        };
    }
}

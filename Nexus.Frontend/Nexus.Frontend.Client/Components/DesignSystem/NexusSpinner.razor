@* Spinner loading component following Nexus design system *@

<svg 
    class="@GetSpinnerClasses()" 
    xmlns="http://www.w3.org/2000/svg" 
    fill="none" 
    viewBox="0 0 24 24"
    @attributes="AdditionalAttributes">
    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
</svg>

@code {
    /// <summary>
    /// Spinner size
    /// </summary>
    [Parameter]
    public SpinnerSize Size { get; set; } = SpinnerSize.Medium;

    /// <summary>
    /// Spinner color
    /// </summary>
    [Parameter]
    public SpinnerColor Color { get; set; } = SpinnerColor.Primary;

    /// <summary>
    /// Additional HTML attributes
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetSpinnerClasses()
    {
        var baseClasses = "animate-spin";
        
        var sizeClasses = Size switch
        {
            SpinnerSize.Small => "h-4 w-4",
            SpinnerSize.Medium => "h-8 w-8",
            SpinnerSize.Large => "h-12 w-12",
            SpinnerSize.ExtraLarge => "h-16 w-16",
            _ => "h-8 w-8"
        };

        var colorClasses = Color switch
        {
            SpinnerColor.Primary => "text-purple-600",
            SpinnerColor.Secondary => "text-gray-600",
            SpinnerColor.Success => "text-emerald-600",
            SpinnerColor.Danger => "text-red-600",
            SpinnerColor.Warning => "text-amber-600",
            SpinnerColor.Info => "text-blue-600",
            SpinnerColor.White => "text-white",
            _ => "text-purple-600"
        };

        return $"{baseClasses} {sizeClasses} {colorClasses}".Trim();
    }

    public enum SpinnerSize
    {
        Small,
        Medium,
        Large,
        ExtraLarge
    }

    public enum SpinnerColor
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        White
    }
}
